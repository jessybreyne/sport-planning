{% extends "base.njk" %}

{% block title %}Todolist - Modifier{% endblock %}
{% block navbar_title %}Modifier '{{ todo.label }}'{% endblock %}

{% block content %}
  <div class="col-md-6 offset-md-3">
    <div class="card card-outline-primary mb-3 text-center">
      <div class="card-block">
        <blockquote class="card-blockquote">
          <center>
            <form action="/todo/edit/{{ todo._id }}" method="post">
              <div class="form-group">
                <label for="inputLabel">Nom de l'exercice :</label>
                <input type="text" class="form-control" id="inputLabel" name="inputLabel" value="{{ todo.label }}" autofocus required>
              </div>
              <div class="form-group">
                <label for="inputJour" class="">Jour de l'exercice :</label>
                <input type="text" class="form-control" id="inputJour" name="inputJour" value="{{ todo.jour }}" required>
              </div>
              <div class="form-group">
                <label for="inputNbRepetitions" class="">Nombre de répétitions :</label>
                <input class="form-control" type="text" id="inputNbRepetitions" name="inputNbRepetitions" value="{{ todo.nbRepetitions }}">
              </div>
              <div class="form-group">
                <label for="inputNbSerie" class="">Nombre de séries :</label>
                <input class="form-control" type="text" id="inputNbSerie" name="inputNbSerie" value="{{ todo.nbSeries }}">
              </div>
              <button type="submit" class="btn btn-success">Modifier</button>
            </form>

            <br />
            <a class="btn btn-primary" href="/todo" role="button">Retour</a>
          </center>
        </blockquote>
      </div>
    </div>
  </div>
{% endblock %}
