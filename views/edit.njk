{% extends "base.njk" %}

{% block title %}Todolist - Modifier{% endblock %}
{% block navbar_title %}Modifier '{{ planning.label }}'{% endblock %}

{% block content %}
  <div class="col-md-6 offset-md-3">
    <div class="card card-outline-primary mb-3 text-center">
      <div class="card-block">
        <blockquote class="card-blockquote">
          <center>
            <form action="/planning/edit/{{ planning._id }}" method="post">
              <div class="form-group">
                <label for="inputLabel">Nom de l'exercice :</label>
                <input type="text" class="form-control" id="inputLabel" name="inputLabel" value="{{ planning.label }}" autofocus required>
              </div>
              <div class="form-group">
                <label for="inputJour" class="">Jour de la semaine :</label>
                <select class="form-control" id="inputJour" name="inputJour" value="{{ planning.jour }}">
                  <option>lundi</option>
                  <option>mardi</option>
                  <option>mercredi</option>
                  <option>jeudi</option>
                  <option>vendredi</option>
                  <option>samedi</option>
                  <option>dimanche</option>
                </select>
            </div>
              <div class="form-group">
                <label for="inputNbRepetitions" class="">Nombre de répétitions :</label>
                <input class="form-control" type="text" id="inputNbRepetitions" name="inputNbRepetitions" value="{{ planning.nbRepetitions }}">
              </div>
              <div class="form-group">
                <label for="inputNbSerie" class="">Nombre de séries :</label>
                <input class="form-control" type="text" id="inputNbSerie" name="inputNbSerie" value="{{ planning.nbSeries }}">
              </div>
              <button type="submit" class="btn btn-success">Modifier</button>
            </form>

            <br />
            <a class="btn btn-primary" href="/planning" role="button">Retour</a>
          </center>
        </blockquote>
      </div>
    </div>
  </div>
{% endblock %}
